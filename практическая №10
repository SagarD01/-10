# include<iostream>
# include<ctime>
using namespace std;

int main() {

	setlocale(0, "");
	srand(time(NULL));

	int a; // Выбор действия
	int kol = 0;// верные ответы
	int life = 5;// 5 жизней
	int num;//число которое вводит пользователь для отгадки числа
	int r;//рандом число
	int r2;//рандом число 2 
	int r3;//рандом число 3 
	r = (rand() % 10) + 1;
	r2 = (rand() % 10) + 1;
	r3 = (rand() % 10) + 1;


	cout << "Выберите действие: (1) Начать игру, (2) Выйти:";
	cin >> a;
	
	switch (a == 1) {
	case 1:
		while (life > 0) {
			r = (rand() % 10) + 1;
			r2 = (rand() % 10) + 1;
			r3 = (rand() % 10) + 1;
			cout << "угадай число от 1 до 10: ";
			cin >> num;
			cout << r<<endl;
			if (num == r) {
				cout << "Вы угадали число"<<endl;
				kol++;
			}
			else if (kol == 3) {
				cout << "Вы отгадали все числа";
				return 0;
			}
			else if (num != r) {
				life--;
			}
			else if(life==0) {
				cout << "Вы проиграли(";
				return 0;
			}
		}
	break;
	case 2:
		cout << "Вы вышли из игры";
		return 0;
	break;
	}

}
