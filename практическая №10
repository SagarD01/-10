# include<iostream>
# include<ctime>//нужно подключить библеотеку со временем для создания рандомного числа
using namespace std;

int main() {

	setlocale(0, "");
	srand(time(NULL));//рандомное число будет зависеть от времени 

	int a; // Выбор действия
	int kol = 0;// количество рандомных чисел
	int l=0;// верные ответы
	int num;//число которое вводит пользователь для отгадки числа
	int r;//рандом число
	r = (rand() % 10) + 1;//создание рандомного числа


	cout << "Выберите действие: (1) Начать игру, (2) Выйти:";
	cin >> a;
	
	switch (a == 1) {
	    
	case 1:
	
		while (kol <=3) {
		    
			r = (rand() % 10) + 1;
			
			cout << "угадай число от 1 до 10: ";
			cin >> num;
			cout <<r<<endl;
			
			if (num == r) {
				cout << "Вы угадали число"<<endl;
				l++;
			}
			
			kol++;
			
			if (num != r) {
				cout<<"Вы не угадали число"<<endl;
			}
			
			if (kol==3){
			    
			    cout<<"ваши попытки "<<kol<<endl;
			    cout<<"верные ответы "<< l <<"/"<<3 <<endl;
			    return 0;
			    
			}
			
		}
	   break;
	
	case 2:
	
		cout << "Вы вышли из игры";
		return 0;
		
	break;
	}

}
